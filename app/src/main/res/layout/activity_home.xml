<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black"
    tools:context=".HomeActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/startIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_outline"
        android:contentDescription="Start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/xpProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:progress="30"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_custom"
        app:layout_constraintStart_toEndOf="@id/startIcon"
        app:layout_constraintEnd_toStartOf="@id/endIcon"
        app:layout_constraintTop_toTopOf="@id/startIcon"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginHorizontal="8dp" />

    <ImageView
        android:id="@+id/endIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_trophy"
        android:contentDescription="End"
        app:layout_constraintTop_toTopOf="@id/startIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- XP and Streak -->
    <TextView
        android:id="@+id/xpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 XP"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/box_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/xpProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/streakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Days Streak"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/box_background"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="@id/xpText"
        app:layout_constraintStart_toEndOf="@id/xpText"
        android:layout_marginStart="16dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/startQuizButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Quiz"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/xpText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/checkProgressButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_500"
        android:text="Check Progress"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startQuizButton" />

    <Button
        android:id="@+id/learnNewSignsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Learn New Signs"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/checkProgressButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/navProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_chart"
            android:background="@android:color/transparent"
            android:contentDescription="Progress" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:background="@android:color/transparent"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
