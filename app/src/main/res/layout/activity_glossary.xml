<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewGlossary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvGlossaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baybayin Glossary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:textColor="#4B2E83" />

        <!-- Basic Characters Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_section"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Characters"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4B2E83"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ᜀ - a\nᜁ - i / e\nᜂ - u / o\nᜊ - ba\nᜃ - ka\nᜇ - da\nᜄ - ga\nᜑ - ha\nᜎ - la\nᜋ - ma\nᜈ - na\nᜅ - nga\nᜉ - pa\nᜐ - sa\nᜆ - ta\nᜏ - wa\nᜌ - ya"
                android:textSize="16sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Kudlit System Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_section"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kudlit System"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4B2E83"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kudlits are marks that change the vowel sound of a character:\n• A mark above = ‘i’ or ‘e’\n• A mark below = ‘o’ or ‘u’\n• A cross mark (virama) = removes vowel"
                android:textSize="16sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Word Examples Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_section"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word Examples"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4B2E83"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ᜊᜌ - bayo = rice mortar\nᜃᜇ - kada = each\nᜋᜎ - mala = like\nᜎᜓᜃᜒ - luki = escape"
                android:textSize="16sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Game Terms Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_section"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Terms"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4B2E83"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Level – A set of 10 questions\n• Streak – Consecutive correct answers\n• Syllable – Unit of sound (e.g., ba, ka, la)\n• Mastery – Your progress in learning symbols"
                android:textSize="16sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Fun Facts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_section"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fun Facts"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4B2E83"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Baybayin was widely used before Spanish colonization.\n• Some Filipino signatures were written in Baybayin.\n• It’s a syllabary, not an alphabet.\n• It’s read from left to right like modern writing."
                android:textSize="16sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Main Menu"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_primary"
            android:textStyle="bold"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
